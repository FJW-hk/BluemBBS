<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BluemForum.dao.UserDao">
    <resultMap type="BluemForum.entity.User" id="UserMap">
        <id column="user_id" property="userId" />
        <result column="username" property="username" />
        <result column="password" property="password"/>
        <result column="tel" property="tel"/>
        <result column="nickname" property="nickname"/>
        <result column="email" property="email"/>
        <result column="homepage" property="homepage"/>
    </resultMap>
    
    <insert id="insertUser" useGeneratedKeys="true" keyColumn="user_id" keyProperty="userId">
    INSERT INTO
    tb_user(username,password,tel,email,nickname,homepage)
    VALUES
    (#{username},#{password},#{tel},#{email},#{nickname},#{homepage})
    </insert>

    <select id="loginUser" resultType="BluemForum.entity.User">
        SELECT
        user_id,
        name,
        username,
        password,
        tel,
        email,
        nickname
        FROM
        tb_user
        WHERE
        user_id=#{userId}
    </select>
    <update id="updateUser" parameterType="BluemForum.entity.User">
        update tb_user
        <if test="email!=null">email=#{email},</if>
        <if test="nickname!=null">nickname=#{nickname},</if>
        <if test="tel!=null">tel=#{tel},</if>
        <if test="password!=null">paasword=#{password},</if>
        where username=#{username} and password=#{password}
    </update>
</mapper>